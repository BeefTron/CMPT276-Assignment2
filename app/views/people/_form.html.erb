<%= form_for @person do |f| %>

<% if @person.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@person.errors.count, "error") %>
      prohibited this article from being saved:
    </h2>
    <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<p>
  <%= f.label :'First Name' %><br>
  <%= f.text_field :fname%>
</p>
<p>
  <%= f.label :'Last Name' %><br>
  <%= f.text_field :lname%>
</p>
<p>
  <%= f.label :weight %><br>
  <%= f.number_field :weight, min: 0, step: 0.1 %>
</p>
<p>
  <%= f.label :height %><br>
  <%= f.number_field :height, min: 0, step: 0.1 %>
</p>
<p>
  <%= f.label :color %><br>
  <%= f.color_field :color %>
</p>
<p>
  <%= f.label :age %><br>
  <%= f.number_field :age, min: 0 %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
